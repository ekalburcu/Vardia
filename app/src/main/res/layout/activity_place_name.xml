<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="1000dp"
    tools:context=".PlaceNameActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/baslikText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="Başlık"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/tarihText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Tarih"
                android:inputType="datetime" />

            <EditText
                android:id="@+id/saatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Saat"
                android:inputType="time" />

            <EditText
                android:id="@+id/ilceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="İlçe"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/pozisyonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Pozisyon"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/kiyafetText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Kıyafet"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/ucretText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Ücret"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/sonrakiBut"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:onClick="sonraki"
                android:text="Sonraki" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>